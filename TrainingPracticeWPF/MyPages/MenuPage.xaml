<Page x:Class="TrainingPracticeWPF.MyPages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainingPracticeWPF.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="MenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="ExamBtn" Click="ExamBtn_Click">Экзамены</Button>
                <Button x:Name="EmployeeBtn" Click="EmployeeBtn_Click">Сотрудники</Button>
                <Button x:Name="DepartmentBtn" Click="DepartmentBtn_Click">Кафедры</Button>
                <Button x:Name="DisciplineBtn" Click="DisciplineBtn_Click">Дисциплины</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="FacultyBtn" Click="FacultyBtn_Click">Факультеты</Button>
                <Button x:Name="SpecialtyBtn" Click="SpecialtyBtn_Click">Специальности</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
