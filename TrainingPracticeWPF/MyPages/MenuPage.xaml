<Page x:Class="TrainingPracticeWPF.MyPages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainingPracticeWPF.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="ExamBtn">Экзамены</Button>
                <Button x:Name="EmployeeBtn">Сотрудники</Button>
                <Button x:Name="DepartmentBtn">Кафедры</Button>
                <Button x:Name="DisciplineBtn">Дисциплины</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="FacultyBtn">Факультеты</Button>
                <Button x:Name="SpecialtyBtn">Специальности</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
