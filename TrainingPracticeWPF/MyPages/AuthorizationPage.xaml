<Page x:Class="TrainingPracticeWPF.MyPages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainingPracticeWPF.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Логин</TextBlock>
                <TextBox x:Name="LoginTb"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock FontSize="20">Пароль</TextBlock>
                <PasswordBox x:Name="PasswordPb"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="EntryGuestBtn" Background="White" Foreground="#FF279C15" BorderBrush="#FF279C15" Click="EntryGuestBtn_Click" >Войти как гость</Button>
                <Button x:Name="EntryBtn" Click="EntryBtn_Click">Войти</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
